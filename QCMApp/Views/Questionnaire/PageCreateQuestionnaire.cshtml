@model QCMApp.Questionnaires

@{
    ViewBag.Title = "CreateQuestionnaire";
}

<h2>Création du questionnaire</h2>


<hr class="style1" />

<hr class="style1" />
<div class="row">
    <div class="col-md-2">
        @Html.ActionLink("Nouvelle question", "", "Question", null, new { @class = "btn btn-default" })
    </div>
    <div class="col-md-2">
        @Html.ActionLink("Nouvelle description", "PageCreateDescription", "Element", null, new { @class = "btn btn-default" })
    </div>
    @using (Html.BeginForm("CreateQuestionnaire", "Questionnaire", FormMethod.Post))
    {
        <div class="col-md-2">
            <input type="text" placeholder="Nom du questionnaire" name="intitule" id="intitule"/>
        </div>
    <div class="col-md-2">
        <input type="number" placeholder="Note acceptable" name="note" />
    </div>
    <div class="col-md-2">
        <input type="submit" value="Enregister" />
    </div>
    }
    <div class="col-md-1">
        <p>Nbr quest</p>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
